<!-- Product detail css -->
<link rel="stylesheet" href="/css/product_detail/product_detail.css">
<!-- Custom css -->
<link rel="stylesheet" href="/css/product_detail/default.css">
<!-- Product Thumbnail Start  -->
<div class="product-body">
    <div class="main-product-thumbnail p-t-100 ptb-sm-60">
        <div class="container">
            <div class="thumb-bg">
                <div class="row">
                    <!-- Main Thumbnail Image Start -->
                    <div class="col-lg-5 mb-all-40">
                        <div class="slideshow-container">
                            <!-- Full-width images with number and caption text -->
                            {{#each detail.images}}
                                <div class="mySlides fade_1">
                                    <img src="{{this}}" style="width:100%">
                                </div>
                            {{/each}}

                            <!-- Next and previous buttons -->
                            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                            <a class="next" onclick="plusSlides(1)">&#10095;</a>
                        </div>
                        <br>
                        <!-- The dots/circles -->

                        <div style="text-align:center">
                            {{#each detail.images}}
                                <span class="dot" onclick="currentSlide(1)"></span>
                            {{/each}}
                        </div>

                    </div>
                    <!-- Main Thumbnail Image End -->
                    <!-- Thumbnail Description Start -->

                    <div class="col-lg-7">
                        <div class="thubnail-desc fix">
                            <h3 class="product-header">{{detail.name}}</h3>
                            <div class="rating-summary fix mtb-10">
                                <div class="rating">
                                    {{#each detail.rate}}
                                        <i class="fa fa-star"></i>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="pro-price mtb-30">
                                <p class="d-flex align-items-center"><span class="prev-price">{{detail.price}}
                                    $</span><span class="price">{{newPrice}}$</span><span
                                        class="saving-price">Sale {{detail.sale}}%</span></p>
                            </div>
                            <p class="mb-20 pro-desc-details">{{detail.overview}} </p>
