<link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.css">
<link rel="stylesheet" href="/css/form.css">
<div class="app-wrapper">
    <div class="container pt-5 clearfix">
        <!-- Slideshow container -->
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade_1">
                <img src="/images/background/about-img.jpg" class="mySlides_img">
                <div class="text">Serious Equipment for Serious Fitness!</div>
            </div>

            <div class="mySlides fade_1">
                <img src="/images/background/background-1.jpg" class="mySlides_img">
                <div class="text">We look forward to supplying you with everything you need to support your healthy lifestyle.</div>
            </div>
            <div class="mySlides fade_1">
                <img src="/images/background/background-2.jpg" class="mySlides_img">
                <div class="text">The Gyments Store isn't just a website.  We have a 7500 Sq Ft Retail Store in HCMUS.</div>
            </div>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
        {{#if newAccount}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Add new admin account successfully!!!</strong>
                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        {{#if username_existed}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Username has existed!!!</strong>
                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        {{#if email_existed}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Email has existed!!!</strong>
                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        {{#if phone_existed}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Phone has existed!!!</strong>
                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        <form style="padding-top: 20px" action="/user/addAccount" method="POST" enctype="multipart/form-data">
            <div class="border-bottom pt-4">
                <h3>Admin personal information</h3>
            </div>
            <div class="form-row pt-3">
                <div class="form-group col-md-6">
                    <span style="color: #cc0000;">*</span>
                    <label for="productName">First Name:</label>
                    <input type="text" class="form-control" placeholder="Input first name" name="fname" required>
                </div>
                <div class="form-group col-md-6">
                    <span style="color: #cc0000;">*</span>
                    <label for="productName">Last Name:</label>
                    <input type="text" class="form-control" placeholder="Input last name" name="lname" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <span style="color: #cc0000;">*</span>
                    <label for="text">Email:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input type="text" class="form-control"  placeholder="Input email address" name="email" required>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="text">Phone Number:</label>
                    <input type="text" class="form-control" placeholder="Input phone number" name="phone">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputAddress">Address:</label>
                    <input type="text" class="form-control" placeholder="Input address" name="address" required>
                </div>
                <div class="form-group col-md-4">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputGender">Gender</label>
                    <select class="form-control" name="gender">
                        <option selected>Choose...</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Others</option>
                    </select>
                </div>
            </div>
            <div class="border-bottom pt-4">
                    <h3>Account information</h3>
            </div>
            <div class="form-row pt-3">
                <div class="form-group col-md-6">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputUsername">Username:</label>
                    <input type="text" class="form-control" placeholder="Input username" name="username" required>
                </div>
                <div class="form-group col-md-6">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputPassword">Password:</label>
                    <input type="password" class="form-control" placeholder="Input password" name="password" required>
                </div>
            </div>
            <div class="form-group">
                <span style="color: #cc0000;">*</span>
                <label for="exampleFormControlFile1">Admin Avatar:</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="avatar" required>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary float-right px-3" data-toggle="modal" data-target="#addAccountModal"><i class="fa fa-database"></i> Submit</button>
                <!-- Modal -->
                <div class="modal fade" id="addAccountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add new admin account</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure to add this account?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/js/imageSlider.js"></script>
