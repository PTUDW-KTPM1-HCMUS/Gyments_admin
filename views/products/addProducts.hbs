<link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.css">
<link rel="stylesheet" href="/css/form.css">
<link href = "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<div class="app-wrapper">
    <div class="container pt-5 clearfix">
        <!-- Slideshow container -->
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade_1">
                <img src="/images/background/about-img.jpg" class="mySlides_img">
                <div class="text">Serious Equipment for Serious Fitness!</div>
            </div>

            <div class="mySlides fade_1">
                <img src="/images/background/background-1.jpg" class="mySlides_img">
                <div class="text">We look forward to supplying you with everything you need to support your healthy lifestyle.</div>
            </div>
            <div class="mySlides fade_1">
                <img src="/images/background/background-2.jpg" class="mySlides_img">
                <div class="text">The Gyments Store isn't just a website.  We have a 7500 Sq Ft Retail Store in HCMUS.</div>
            </div>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
        <form style="padding-top: 20px" action="/products/addProducts" method="POST">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <span style="color: #cc0000;">*</span>
                    <label for="productName">Product Name</label>
                    <input type="text" class="form-control" placeholder="Input product name" name="name" value="{{product.name}}" required>
                </div>
                <div class="form-group col-md-4">
                    <span style="color: #cc0000;">*</span>
                    <label for="exampleFormControlSelect1">Category</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="categoryID" value="{{product.categoryID}}">
                        <option value="" disabled selected hidden>Choose...</option>
                        <option value="category01">Whey</option>
                        <option value="category02">Dumbbells</option>
                        <option value="category03">Nutrients</option>
                        <option value="category04">Increase Weight</option>
                        <option value="category05">Diet Pill</option>
                        <option value="category06">Machines</option>
                        <option value="category07">Bicycle</option>
                        <option value="category08">Kettkebelss</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <span style="color: #cc0000;">*</span>
                <label for="exampleFormControlTextarea1">Product Overview</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Input product overview" name="overview" value="{{product.overview}}" required></textarea>
            </div>
            <div class="form-group">
                <span style="color: #cc0000;">*</span>
                <label for="exampleFormControlTextarea1">Product Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Input product description" name="description" value="{{product.description}}" required></textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <span style="color: #cc0000;">*</span>
                    <label for="text">Product Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <input type="text" class="form-control"  placeholder="Input product price: 60" name="price" value="{{product.price}}" required>
                    </div>
                </div>
                <div class="form-group col-md-5">
                    <span style="color: #cc0000;">*</span>
                    <label for="sale">Product Sale Percent</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">%</div>
                        </div>
                        <input type="text" class="form-control" placeholder="Input sale percent" name="sale" value="{{product.sale}}" required>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputRating">Rating Stars</label>
                    <select class="form-control" name="rate" value="{{product.rate}}">
                        <option value="" disabled selected hidden>Choose...</option>
                        <option value="5">5</option>
                        <option value="4">4</option>
                        <option value="3">3</option>
                        <option value="2">2</option>
                        <option value="1">1</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputQuantity">Product Quantity</label>
                    <input type="text" class="form-control" placeholder="Input product quantity: 20" name="quantity" value="{{product.quantity}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="exampleFormControlFile1">Input product image</label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary float-right px-3"><i class="fa fa-database"></i> Submit</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/imageSlider.js"></script>